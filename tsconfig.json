{
  "compilerOptions": {
      "target": "ESNext",
      "useDefineForClassFields": true,
      "module": "CommonJS",
      "declaration": true,
      "lib": [ "ESNext", "DOM" ],
      "allowJs": true,
      "outDir": "./build",
      "moduleResolution": "Node",
      "strict": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "skipLibCheck": true
  },
  "include": [ "src", "modules", "./main.ts" ],
  "exclude": [ "node_modules" ]
}